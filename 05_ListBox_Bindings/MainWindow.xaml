<Window x:Class="_05_ListBox_Bindings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_ListBox_Bindings"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Width="100" Height="50" Click="Button_Click"> Add </Button>
            <Button Width="100" Click="Button_Click_1"> Remove </Button>
            <Button Width="100" Click="Button_Click_2"> Change</Button>
        </StackPanel>
        <ListBox HorizontalAlignment="Stretch" Name="list" SelectionMode="Extended">
            <ListBoxItem>Red</ListBoxItem>
            <ListBoxItem IsSelected="True">Green</ListBoxItem>
            <ListBoxItem IsSelected="True">Blue</ListBoxItem>
        </ListBox>
        
    </DockPanel>
</Window>
